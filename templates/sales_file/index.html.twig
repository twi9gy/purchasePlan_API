{% extends 'base.html.twig' %}

{% block title %}SalesFile index{% endblock %}

{% block body %}
    <h1>SalesFile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Filename</th>
                <th>CreatedAt</th>
                <th>EditAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sales_file in sales_files %}
            <tr>
                <td>{{ sales_file.id }}</td>
                <td>{{ sales_file.filename }}</td>
                <td>{{ sales_file.createdAt ? sales_file.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sales_file.editAt ? sales_file.editAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('sales_file_show', {'id': sales_file.id}) }}">show</a>
                    <a href="{{ path('sales_file_edit', {'id': sales_file.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sales_file_new') }}">Create new</a>
{% endblock %}
